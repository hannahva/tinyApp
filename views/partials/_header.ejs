<!-- views/partials/_header.ejs -->

<!DOCTYPE html>


  <h3>Welcome to TinyApp!</h3>

<% if (username === undefined) { %>
 <!-- login form -->
  <form method="POST" action="/login" style="display: inline" >
    <input id="username" type="text" name="username" placeholder="Username" style="width: 150px">
    <input type="submit" value="Submit">
  </form>
 <% } %>

<% if (username) { %>
 <!-- logout form -->
 <%= username %> &nbsp
  <form method="POST" action="/logout" style="display: inline" >
    <input type="submit" value="Logout">
  </form>

<% } %>




